    @model IEnumerable<eBooks.Models.Publication>

@{
    ViewData["Title"] = "Index";
}

@*<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>*@
<div  class="text-white"> <a asp-controller="Publication" asp-action="Create" class="btn btn-success">
<i class="bi bi-plus-circle"></i> Add New </a>
</div>
<table class="table">
    <thead>
        <tr class="text-center">
            <th>
                @Html.DisplayNameFor(model => model.PublicationLogo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PublicationName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PublicationFamousBooks)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td class="align-middle">
                @*@Html.DisplayFor(modelItem => item.PublicationLogo)*@
                <img class="rounded-circle" src="@item.PublicationLogo" alt="@item.PublicationName" style="max-width: 150px" />
            </td>
            <td class="align-middle">
                @Html.DisplayFor(modelItem => item.PublicationName)
            </td>
            <td class="align-middle">
                @Html.DisplayFor(modelItem => item.PublicationFamousBooks)
            </td>
            <td class="align-middle">
                <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.PublicationID"><i class="bi bi-pencil-square"></i>Edit</a> |
                <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.PublicationID"><i class="bi bi-eye"></i>Details</a> |
                <a class="btn btn-danger text-white" asp-action="Delete" asp-route-id="@item.PublicationID"><i class="bi bi-trash"></i>Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
