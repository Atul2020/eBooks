@model eBooks.Models.Publication

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Publication</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group text-center">
             <img id="ProfilePicturePreview"  class="border-info rounded-circle" style="max-width: 150px" />
              </div>
            <input type="hidden" asp-for="PublicationID" />
            <div class="form-group">
                <label asp-for="PublicationLogo" class="control-label"></label>
                <input asp-for="PublicationLogo" class="form-control" />
                <span asp-validation-for="PublicationLogo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PublicationName" class="control-label"></label>
                <input asp-for="PublicationName" class="form-control" />
                <span asp-validation-for="PublicationName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PublicationFamousBooks" class="control-label"></label>
                <input asp-for="PublicationFamousBooks" class="form-control" />
                <span asp-validation-for="PublicationFamousBooks" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(document).ready(function () {
            var output = document.getElementById('ProfilePicturePreview');
            output.src = $("#PublicationLogo").val();
        })
        $("#PublicationLogo").on("change", function () {
            var output = document.getElementById('ProfilePicturePreview');
            output.src = $(this).val();
        })
    </script>
}
