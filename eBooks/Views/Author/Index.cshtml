@model IEnumerable<eBooks.Models.Author>

@{
    ViewData["Title"] = "Index";
}
@*
<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>*@
<div  class="text-white"> <a asp-controller="Author" asp-action="Create" class="btn btn-success">
<i class="bi bi-plus-circle"></i> Add New </a>
</div>
<div class="row">
    <div class="col-md-8 offset-md-2">
<table class="table">
    <thead>
        <tr class="text-center">
            <th>
                @Html.DisplayNameFor(model => model.AuthorProfilePicture)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AuthorName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AuthorBio)
            </th>
                    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                    {
                        <th>Actions</th>
                    }
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td class="align-middle">
                @*@Html.DisplayFor(modelItem => item.AuthorProfilePicture)*@
                 <img class="rounded-circle" src="@item.AuthorProfilePicture" alt="@item.AuthorName" style="max-width: 150px" />
            </td>
            <td class="align-middle">
                @Html.DisplayFor(modelItem => item.AuthorName)
            </td>
            <td class="align-middle">
                @Html.DisplayFor(modelItem => item.AuthorBio)
            </td>
                        @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                        {
                            <td class="align-middle">
                                <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.AuthorID"><i class="bi bi-pencil-square"></i>Edit</a> |
                <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.AuthorID"><i class="bi bi-eye"></i>Details</a> |
                <a class="btn btn-danger text-white" asp-action="Delete" asp-route-id="@item.AuthorID"><i class="bi bi-trash"></i>Delete</a>
            </td>
            }
        </tr>
}
    </tbody>
</table>
</div>
</div>

