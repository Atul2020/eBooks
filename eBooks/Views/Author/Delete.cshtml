@model eBooks.Models.Author

@{
    ViewData["Title"] = "Delete";
}

@*<h1>Are you sure you want to delete this?</h1>*@
<div>
    <h1>Delete Author @Model.AuthorName</h1>

    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AuthorProfilePicture)
        </dt>
        <dd class = "col-sm-10">
            @*@Html.DisplayFor(model => model.AuthorProfilePicture)*@
            <img src="@Model.AuthorProfilePicture" id="ProfilePicturePreview" alt="@Model.AuthorName class="border-info rounded-circle" style="max-width: 150px" /> 
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AuthorName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AuthorName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AuthorBio)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AuthorBio)
        </dd>
    </dl>
 
    <form asp-action="Delete">
        <input type="hidden" asp-for="AuthorID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
    </form>
</div>
